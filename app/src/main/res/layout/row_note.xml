<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" android:padding="10dp" >

        <TextView android:id="@+id/forename" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@android:color/black" android:layout_marginLeft="10dp"  android:textStyle="bold" tools:text="" />

        <TextView android:id="@+id/surname" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@android:color/black" android:layout_alignLeft="@+id/forename" android:layout_below="@+id/forename" tools:text="" />

        <AutoCompleteTextView
            android:id="@+id/noteStudent"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_below="@+id/surname"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:hint="@string/txtNote"
            android:maxLines="1"
            android:singleLine="true" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>