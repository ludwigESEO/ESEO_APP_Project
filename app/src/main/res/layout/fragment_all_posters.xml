<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.eseo.dis.couroulu.eseo_app_project.AllPostersFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTitleProjectsView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nom projet"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/txtDescriptionProjectsView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description Projet"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <Button
            android:id="@+id/ButtonMoreInformations"
            android:layout_width="144dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:text="@string/strAfficherInfoProject" />


    </LinearLayout>
</FrameLayout>
